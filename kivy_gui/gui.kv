<GuiClient>:
    Label:
        center_x: root.width * 0.5
        center_y: root.height - 20
        font_size:20
        text: 'Client'
    TextInput:
        id: message_input
        center_x: root.width - 250
        height: 40
        width: 300
        background_color: [255, 206, 173, 1]
        auto_indent: True
    TextInput:
        id: message_view
        center_x: root.width - 201
        center_y: 90
        height: 300
        width: 400
    ListView:
        height: 100
        width: 100
        center_x: 250
        center_y: 250
        item_strings: ['1', '2']
        label: 'contacts'
    Button:
        center_x: root.width - 51
        width: 100
        height:40
        text: 'Send'
        on_press: root.send()